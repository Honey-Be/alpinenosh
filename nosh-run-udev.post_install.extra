#!/bin/sh -

if test ! -e /usr/bin/udevd
then
    echo "Symlinking /usr/lib/systemd/systemd-udevd to /usr/bin/udevd" 
    ln -f -s /usr/lib/systemd/systemd-udevd /usr/bin/udevd
else
    echo "/usr/bin/udevd already exists"
    echo "On Archlinux, udev is provided by systemd by default"
    echo "Make sure it points to a working udev implementation"
fi    
